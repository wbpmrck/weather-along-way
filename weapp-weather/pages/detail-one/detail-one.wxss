/* 顶部信息区域 */
.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 5rpx 40rpx 0 40rpx;
}

.district {
  display: inline-block;
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 12rpx;
  /* min-width: 100rpx; */
}

.city {
  display: inline-block;
  font-size: 32rpx;
}

.today-region {
  border-radius: 12rpx;
  padding: 12rpx;
}

.today {
  font-size: 32rpx;
}

.today-weather {
  font-size: 36rpx;
}

/* 天气数据区域 */

.weather-data {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 5rpx 40rpx 0 40rpx;
}

.weather-data .label {
  font-size: 30rpx;
  color: #808080;
  margin-bottom: 20rpx;
}

.arrive-time-region {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.arrive-weather-region {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.arrive-weather-region image {
  width: 48rpx;
  height: 48rpx;
}

.arrive-weather-region .content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.not-good-region {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 预警区域 */
.alarms {
  margin-top: 32rpx;
}

.alarm {
  font-size: 38rpx;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-weight: normal;
  margin-top: 1rpx;
}


/* 地图区域 */
.map {
  width: 100%;
  height: 750rpx;
}


/* 时间区域 */
.time {
  position: fixed;
  width: 100%;
  z-index: 1;
  bottom: 0;
  height: 140rpx;
  text-align: center;
}